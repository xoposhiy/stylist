	<title>@ViewBag.Title - C# Stylist</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p class="text-muted">Developed in Ural Federal University in 2014. <a href="mailto:xoposhiy@mail.ru">Contact author</a></p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
